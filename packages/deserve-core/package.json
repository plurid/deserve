{
    "name": "@plurid/deserve-core",
    "version": "0.0.0-1",
    "description": "Deserve Core to Own Your Data",
    "keywords": [
        "deserve",
        "core"
    ],
    "author": "ly3xqhl8g9 <ly3xqhl8g9@plurid.com> (https://plurid.com)",
    "license": "SEE LICENSE IN LICENSE",
    "repository": {
        "type": "git",
        "url": "https://github.com/plurid/deserve"
    },
    "bugs": {
        "email": "source@plurid.com",
        "url": "https://github.com/plurid/deserve/issues"
    },
    "homepage": "https://github.com/plurid/deserve/blob/master/packages/deserve-core/README.md",
    "publishConfig": {
        "registry": "https://registry.npmjs.org/",
        "access": "public"
    },
    "engines": {
        "node": ">=12",
        "npm": ">=6"
    },
    "main": "distribution/index.js",
    "module": "distribution/index.es.js",
    "typings": "distribution/index.d.ts",
    "files": [
        "distribution"
    ],
    "scripts": {
        "clean": "rimraf ./distribution",
        "lint": "eslint ./source --ext .ts,.tsx",
        "start": "deon environment ./environment/.env.local.deon -- node test/index.js",
        "build.development": "yarn clean && rollup -c ./scripts/rollup.config.js --environment ENV_MODE:local",
        "build.production": "rollup -c ./scripts/rollup.config.js --environment ENV_MODE:production",
        "build.removeTests": "rimraf `find ./distribution/ -type d -name __tests__`",
        "build.copyAssets": "cp -r ./source/assets ./distribution/assets",
        "build": "yarn clean && yarn build.production && yarn build.removeTests && yarn build.copyAssets",
        "prepublishOnly": "yarn build"
    },
    "dependencies": {
        "@plurid/delog": "^0.0.0-5",
        "@plurid/plurid-functions": "^0.0.0-5",
        "body-parser": "^1.19.0",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "pump": "^3.0.0"
    },
    "devDependencies": {
        "@plurid/deon": "^0.0.0-4",
        "@types/body-parser": "^1.19.1",
        "@types/cookie-parser": "^1.4.2",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/jest": "^26.0.24",
        "@types/node": "^16.3.3",
        "@types/pump": "^1.1.1",
        "@typescript-eslint/eslint-plugin": "^4.28.4",
        "@typescript-eslint/parser": "^4.28.4",
        "@zerollup/ts-transform-paths": "^1.7.18",
        "eslint": "^7.31.0",
        "jest": "^27.0.6",
        "rimraf": "^3.0.2",
        "rollup": "^2.53.2",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-typescript2": "^0.30.0",
        "ts-jest": "^27.0.3",
        "ts-node": "^10.1.0",
        "ttypescript": "^1.5.12",
        "typescript": "^4.3.5",
        "typescript-transform-paths": "^3.1.0"
    }
}
